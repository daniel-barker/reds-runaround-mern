    "mongoose": "^8.1.3",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.2"
  }
}
